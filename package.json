    "grpc-tools": "^1.12.4",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.10.44",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "qrcode": "^1.5.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
